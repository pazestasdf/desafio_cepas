<p id="notice"><%= notice %></p>

<h1>Oenologist Scores</h1>

<table>
  <thead>
    <tr>
      <th>Oenologist</th>
      <th>Wine</th>
      <th>Strain</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oenologist_scores.each do |oenologist_score| %>
      <tr>
        <td><%= oenologist_score.oenologist.name %></td>
        <td><%= oenologist_score.wine.name %></td>
        <td><%= oenologist_score.wine.strains.order(:name).map{ |s| "#{s.name} (#{oenologist_score.wine.getPercentByStrain(s.id)})" }.join(', ') %></td>
        <td><%= oenologist_score.score %></td>
        <td><%= link_to 'Show', oenologist_score %></td>
        <td><%= link_to 'Edit', edit_oenologist_score_path(oenologist_score) %></td>
        <td><%= link_to 'Destroy', oenologist_score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

